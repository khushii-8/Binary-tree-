#include<iostream>
using namespace std;

struct node{
    int data;
    node* left;
    node* right;

    node(int val){
        data = val;
        left = right = NULL;
    }
};

// Insert function
node* insert(node* root, int val){
    if(root == NULL)
        return new node(val);

    if(val < root->data)
        root->left = insert(root->left, val);
    else
        root->right = insert(root->right, val);

    return root;
}

// Ceil in BST
int findCeil(node* root, int key){

    int ceil = -1;

    while(root != NULL){

        if(root->data == key)
            return root->data;

        if(root->data < key){
            root = root->right;
        }
        else{
            ceil = root->data;  // possible answer
            root = root->left;
        }
    }

    return ceil;
}

int main(){

    node* root = NULL;

    // Build BST
    root = insert(root, 8);
    insert(root, 4);
    insert(root, 12);
    insert(root, 2);
    insert(root, 6);
    insert(root, 10);
    insert(root, 14);

    int key = 5;

    int ans = findCeil(root, key);

    if(ans != -1)
        cout << "Ceil of " << key << " is: " << ans;
    else
        cout << "No Ceil found";

    return 0;
}
