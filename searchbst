#include<iostream>
using namespace std;

struct node{
    int data;
    node* left;
    node* right;

    node(int val){
        data = val;
        left = right = NULL;
    }
};

// Insert function to build BST
node* insert(node* root, int val){
    if(root == NULL)
        return new node(val);

    if(val < root->data)
        root->left = insert(root->left, val);
    else
        root->right = insert(root->right, val);

    return root;
}

// Search in BST
node* searchBST(node* root, int key){
    if(root == NULL || root->data == key)
        return root;

    if(key < root->data)
        return searchBST(root->left, key);

    return searchBST(root->right, key);
}

int main(){

    node* root = NULL;

    // Creating BST
    root = insert(root, 5);
    insert(root, 3);
    insert(root, 7);
    insert(root, 2);
    insert(root, 4);
    insert(root, 6);
    insert(root, 8);

    int key = 4;

    node* result = searchBST(root, key);

    if(result != NULL)
        cout << "Key found: " << result->data;
    else
        cout << "Key not found";

    return 0;
}
